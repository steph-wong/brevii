<%= bootstrap_form_for(:summary, url: new_movie_summary_path(@movie.id), layout: :horizontal) do |f| %>
<%= f.text_field :content, hide_label: true, placeholder: 'Write a summary' %>
<%= f.hidden_field :movie_id, :value => :id %>
<%= f.form_group :spoiler do %>
  <%= f.check_box :spoiler, label: "Spoiler Alert" %>
<% end %>
<%= f.submit "Post", class:"btn btn-info"%>
<% end %>
