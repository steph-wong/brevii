<% @user = current_user %>

<div class="row">
  <div class="col-sm-4 col-sm-offset-1">
    <%= image_tag("http://image.tmdb.org/t/p/w300" << @movie.poster_path, class: 'img-responsive') %>
  </div>

  <div class="col-sm-6">
      <div class="caption">
          <h3> <%= @movie.title %> </h3>
          <p> <%= @movie.overview %> </p>
          <ul class="list-inline">
          </ul>
      </div>
</div>
</div>
