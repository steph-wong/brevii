<% provide(:title, @movie.title) %>

<% @user = current_user %>

<div class="row">
  <div class="col-sm-4 col-sm-offset-1">
    <%= image_tag("http://image.tmdb.org/t/p/w300" << @movie.poster_path, class: 'img-responsive') %>
  </div>

  <div class="col-sm-6">
      <div class="caption">
          <h3> <%= @movie.title %> </h3>

          <% if @sum_list.present? %>
                  <ol class="reviews">
                      <%= render @sum_list %>
                  </ol>
              <% else %>
                  <p>Movie has no summaries yet.</p>
                  <% end %>

            <div class="row">
                <section class="summary_form">
                  <%= render 'summaries/form' %>
                </section>
            </div>


          <ul class="list-inline">
            <!-- links to deets -->
          </ul>
      </div>
</div>
</div>
